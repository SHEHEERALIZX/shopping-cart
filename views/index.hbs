{{#if items}}

<section>
    <div class="container mt-5">
        <div class="row">
            {{#each items}}
            <div class="col-md-3 ">
                <div class="card" style="width: 20 rem;height:25rem ">
                    <img src='product-images/{{this._id}}.jpg' class="card-img-top" style="height: 10rem  " alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <p class="card-text">{{this.description}}</p>
                        <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">Add to Cart</a>
                    </div>
                </div>
            </div>
            {{/each}}

         
        </div>
    </div>
</section>

{{else}}

<h1>No data found</h1>

{{/if}}

